<h1>Listing links</h1>

<table>
  <tr>
    <th>Reference</th>
    <th>Provider</th>
    <th>Client</th>
    <th>Link end a endpoint</th>
    <th>Link end b endpoint</th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.reference %></td>
    <td><%= link.provider.organization.name %></td>
    <td><%= link.client.organization.name %></td>
    <td><%= link.link_end_a_endpoint.name %></td>
    <td><%= link.link_end_b_endpoint.name %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

