                            :id, :name,
                            :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :link_end_b_endpoint_id %><br />
    <%= f.collection_select :link_end_b_endpoint_id, @endpoints,
                            :id, :name,
                            :include_blank => true %>
